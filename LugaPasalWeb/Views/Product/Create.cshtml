@model IEnumerable<LugaPasalModals.CategoryModal>

@{
    ViewBag.Title = "Create";
}

<h4>ProductModals</h4>

<form id="CreateProduct">
    <div class="form-group">
        <label>Categories</label>
        <select class="form-control" name="CategoryId">
            @foreach (var item in Model)
            {
                <option value="@item.Name">@item.Name</option>
            }

        </select> <br /> <br />

    </div>
    <div class="form-group">
        <label>Name</label>
        <input name="Name" class="form-control" /><br /> <br />

    </div>
    <div class="form-group">
        <label>Description</label>
        <input class="form-control" name="Description" value="" /><br /> <br />
    </div>
    
    <div class="form-group">
        <label>Price</label>
        <input name="Price" class="form-control" /><br /> <br />

    </div>

    <input type="button" id="SaveBtn" value="Create" class="btn btn-primary" />

</form>




    

    <script>
        $("#SaveBtn").click(function () {

            $.ajax({
                type: "POST",
                url: '/Product/Create',
                data: $("#CreateProduct").serialize()


            })
                .done(function (response) {
                    $("#TableContainer").html(response);
                    $("#actionContainer").html("");
                })
                .fail(function (XMLHTTPRequest, textStatus, errorThrown) {
                    alert("Fail");
                });
        });
    </script>

